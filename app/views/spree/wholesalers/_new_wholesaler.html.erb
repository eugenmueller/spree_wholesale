<div class="col-md-offset-3 col-md-6">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title"><%= Spree.t(:create_a_new_wholesale_account) %></h3>
    </div>
    <div id="new-wholesaler" class="panel-body" data-hook="login">
      <%= form_for @wholesaler, :as => :spree_user, :url => spree.registration_path(@wholesaler) do |f| %>
        <div data-hook="signup_inside_form">
          <%= render :partial => 'spree/shared/user_form', :locals => { :f => f } %>
          <div class="form-group">
            <%= label_tag :wholesale_request, :id => 'wholesale_request' do %>
              <%= f.check_box :wholesale_request, '1' %>
              <%= Spree.t(:wholesale_request) %>
            <% end %>
          </div>
          <p><%= f.submit Spree.t(:create), :class => 'btn btn-lg btn-success btn-block' %></p>
        </div>
      <% end %>
      <div class="text-center">
        <%= Spree.t(:or) %>
          <%= link_to Spree.t(:login_as_existing), spree.login_path %>
      </div>
      <div data-hook="login_extras"></div>
    </div>
  </div>
</div>

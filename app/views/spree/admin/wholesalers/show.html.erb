<h1><%= t("wholesaler_account") %></h1>

<div class="leftie">

  <h5>Company:</h5>
  <h3><%= @wholesaler.company %></h3>

  <h5>Contact_person:</h5>
  <h3><%= @wholesaler.contact_person %></h3>

  <h5>Phone:</h5>
  <h3><%= @wholesaler.phone %></h3>

  <h5>Web_address:</h5>
  <h3><%= @wholesaler.web_address %></h3>

  <h5>Social_media:</h5>
  <h3><%= @wholesaler.social_media %></h3>

  <h5>Comments:</h5>
  <h3><%= simple_format @wholesaler.comments %></h3>

</div>

<div class="rightie">

  <div class="adr">
    <h4><%= t("bill_address") %></h4>
    <%= render 'spree/admin/shared/address', :address => @wholesaler.bill_address %>
  </div>
  <div class="adr">
    <h4><%= t("ship_address") %></h4>
    <%= render 'spree/admin/shared/address', :address => @wholesaler.ship_address %>
  </div>

  <div class="adr">
    <h4><%= t("user_details") %></h4>
    <p>
      ID: <%= @wholesaler.user.id %>
      <br/>
      Email: <%= @wholesaler.user.email %>
      <br/>
      <%= link_to "view user", admin_user_path(@wholesaler.user) %> /
      <%= link_to "edit user", edit_admin_user_path(@wholesaler.user) %> /
      <%= render "user_options", :user => @wholesaler.user %>
    </p>
  </div>

</div>

<hr/>

<p>
  <%= link_to_edit @wholesaler %> <%= t('or') %>
  <%= link_to t('back'), collection_url %>
</p>

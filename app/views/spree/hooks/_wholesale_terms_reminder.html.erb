<% order ||= @order %>
<% if order && order.is_wholesale? %>
  <h4 class="wholesale-customer-id"><%= t('wholesale_customer', { :id => order.user_id }) %></h4>
  <% unless order.paid? %>
    <h3>Thank you for your order. You have been emailed an invoice for your order. Your order will be shipped following payment. Payment details have been provided on your invoice.</h3>
  <% end %>
<% end %>
